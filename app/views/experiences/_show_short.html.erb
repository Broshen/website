<% experience = show_short %>

<div class="experience card" data-toggle="collapse"
	data-target=".<%= experience.id %>-<%= experience.title.delete(' ').downcase %>">
	<div class="row">
		<div class="col col-xs-12 col-sm-6">
			<h4><%= experience.title %></h4>
			<h5> 
				<%= parse_date(experience.start) %> to <%= parse_date(experience.end) %>
			</h5>
			<h5>
				<%= experience.location %>
			</h5>
		</div>
		<div class="col col-xs-12 col-sm-6 job-thumbnail">
			<%= experience.thumbnail.html_safe %>
		</div>
	</div>

	<div class="row">
		<div class="col col-xs-12">

			<p>
				<%= (experience.summary).html_safe %>
				<br>
			</p>


			<div class="<%= experience.id %>-<%= experience.title.delete(' ').downcase %> collapse">

				<p><%= experience.description.html_safe %></p>
				<br>
				<strong>Links:</strong>
				<p><%= experience.links.html_safe %></p>

			</div>



			<% if is_admin? %>
			<td><%= link_to 'Edit', edit_experience_path(experience) %></td>
			<td><%= link_to 'Destroy', experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<% end %>

		</div>
	</div>
</div>

<br>