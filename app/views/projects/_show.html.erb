<% project = show %>

<span class="anchor" id=<%= project.name.delete(' ').downcase %> %>></span>
<h2 class="center">
<%= project.name %>
</h3>

<p>
<%= project.description.html_safe %>
</p>
<br>
<p>
<strong>Gallery:</strong>
</p>
<div class="center">
<%= project.gallery.html_safe %>
</div>

<br>

<br>
<p>
<strong>Languages:</strong>
<br>
<%= project.languages.html_safe %>
<br>

<br>
<strong>Links:</strong>
<br>
<%= project.links.html_safe %>
</p>


<% if is_admin? %>
<td><%= link_to 'Edit', edit_project_path(project) %></td>
<td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
<br><br>