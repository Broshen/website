<% project = show_short %>
<div class="card project" data-toggle="modal" data-target="#<%=project.name.delete(' ').downcase%>-<%=project.id%>">

	<div class="project-body">
		<div class="project-thumbnail">
			<%= project.thumbnail.html_safe %>
		</div>
		<div class="project-title">
			<h4><%= project.name %></h4>
		</div>
	</div>
	<div class="project-desc">
		<div class="project-desc-content">
			<%= (project.summary).html_safe %>
		</div>
	</div>
</div>

<div id="<%=project.name.delete(' ').downcase%>-<%=project.id%>" class="modal fade" role="dialog">
	<div class="modal-dialog">

		<!-- Modal content-->
		<div class="modal-content">
			<h4 class="modal-title"><%= project.name %></h4>
			<button type="button" class="close" data-dismiss="modal">&times;</button>
			<div class="modal-gallery-wrapper col col-sm-8 col-xs-12">
				<div class="modal-gallery">
					<%= project.parse_into_carousel(project.gallery).html_safe %>
				</div>
			</div>
			<div class="modal-desc col col-sm-4 col-xs-12">
				<div class="modal-desc-content">
					<%= project.description.html_safe %>
				</div>
				<div class="modal-footer">
					<strong>Languages:</strong>
					<br>
					<%= project.languages.html_safe %>

					<p>
						<strong>Links:</strong>
						<br>
						<%= project.links.html_safe %>
					</p>


					<% if is_admin? %>
					<td><%= link_to 'Edit', edit_project_path(project) %></td>
					<td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					<% end %>

				</div>
			</div>

		</div>

	</div>
</div>
